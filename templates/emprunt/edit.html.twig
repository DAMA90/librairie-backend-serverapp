{% extends 'base.html.twig' %}

{% block title %}Modifier l'Emprunt - Baticam{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('emprunts_index') }}">Emprunts</a></li>
                <li class="breadcrumb-item"><a href="{{ path('emprunt_show', {'id': emprunt.id}) }}">Emprunt #{{ emprunt.id }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-warning">
                <h2 class="mb-0">✏️ Modifier l'emprunt #{{ emprunt.id }}</h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.livre) }}
                        {{ form_widget(form.livre, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.livre) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.utilisateur) }}
                        {{ form_widget(form.utilisateur, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.utilisateur) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.dateEmprunt) }}
                        {{ form_widget(form.dateEmprunt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateEmprunt) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.dateRetourPrevue) }}
                        {{ form_widget(form.dateRetourPrevue, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateRetourPrevue) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.dateRetourReelle) }}
                        {{ form_widget(form.dateRetourReelle, {'attr': {'class': 'form-control'}}) }}
                        <small class="form-text text-muted">
                            Laissez vide si le livre n'a pas encore été retourné.
                        </small>
                        {{ form_errors(form.dateRetourReelle) }}
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('emprunt_show', {'id': emprunt.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}